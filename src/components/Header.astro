---
import HeaderLink from './HeaderLink.astro';
import { HOMEPAGE_URL } from '../consts';
---

<header class="fixed w-full pq2 z-20 backdrop-blur-md">
	<div class="mx-auto max-w-3xl">
		<nav class="flex items-center gap-3 text-base">
			<h2 class="font-semibold tracking-tighter p-2 font-mplus text-lg">
				S.M.A.R.T. Foundation
			</h2>
				<div class="items-center gap-6 hidden md:flex">
					<HeaderLink href={HOMEPAGE_URL}>Home</HeaderLink>
					<HeaderLink href="/research">Research</HeaderLink>
					<HeaderLink href="/about">About</HeaderLink>
					<HeaderLink href="/contact" target="_blank">Contact</HeaderLink>
				</div>
					<div class="flex-1"></div>
		</nav>
	</div>
</header>

